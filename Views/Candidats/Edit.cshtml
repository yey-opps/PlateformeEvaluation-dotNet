@model WebApplication1.Models.Candidat

@{
    ViewData["Title"] = "Modifier le candidat";
    Layout = "_LayoutDashboard";
}

<!-- En-tête -->
<div class="page-header mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Modifier le candidat</h1>
        <p class="page-subtitle">
            Mettre à jour les informations du profil candidat.
        </p>
    </div>

    <a asp-action="Index" class="btn btn-light">
        ← Retour à la liste
    </a>
</div>

<!-- Carte formulaire -->
<div class="card">
    <div class="card-body">

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

            <div class="row">
                <!-- Prénom -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Prenom" class="form-label">Prénom</label>
                    <input asp-for="Prenom" class="form-control" />
                    <span asp-validation-for="Prenom" class="text-danger"></span>
                </div>

                <!-- Nom -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Nom" class="form-label">Nom</label>
                    <input asp-for="Nom" class="form-control" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
            </div>

            <!-- Email -->
            <div class="mb-4">
                <label asp-for="Email" class="form-label">Adresse email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-light">
                    Annuler
                </a>

                <button type="submit" class="btn btn-success">
                    Enregistrer les modifications
                </button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
