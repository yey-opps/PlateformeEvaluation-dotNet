@page
@using WebApplication1.Areas.Identity.Pages.Account
@model LoginModel
@{
    ViewData["Title"] = "Connexion";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Connexion</h1>
            <p class="login-subtitle">Accédez à votre compte</p>
        </div>

        <form method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" type="email" placeholder="Votre email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                <input asp-for="Input.Password" class="form-control" type="password" placeholder="Votre mot de passe" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    Se souvenir de moi
                </label>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
        </form>

        <div class="login-footer">
            <p>
                <a asp-page="./Register" class="login-link">Créer un compte</a>
            </p>
            <p>
                <a asp-page="./ForgotPassword" class="login-link">Mot de passe oublié ?</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
