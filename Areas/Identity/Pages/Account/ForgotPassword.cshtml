@page
@using WebApplication1.Areas.Identity.Pages.Account
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Mot de passe oublié</h1>
            <p class="login-subtitle">Entrez votre email pour recevoir le lien de réinitialisation</p>
        </div>

        <form method="post" class="login-form">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Votre email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Envoyer le lien de réinitialisation</button>
        </form>

        <div class="login-footer">
            <p>
                <a asp-page="./Login" class="login-link">Retour à la connexion</a>
            </p>
        </div>

        @if (Model.ResetLink != null)
        {
            <div class="mt-3">
                <p>Link (dev): <a href="@Model.ResetLink">Réinitialiser le mot de passe</a></p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}