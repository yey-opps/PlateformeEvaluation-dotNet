@page
@using WebApplication1.Areas.Identity.Pages.Account
@model ResetPasswordModel
@{
    ViewData["Title"] = "Réinitialiser le mot de passe";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Réinitialiser le mot de passe</h1>
            <p class="login-subtitle">Entrez un nouveau mot de passe</p>
        </div>

        <form method="post" class="login-form">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Input.Code" />

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Votre email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Nouveau mot de passe</label>
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmer le mot de passe</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Réinitialiser le mot de passe</button>
        </form>

        <div class="login-footer">
            <p>
                <a asp-page="./Login" class="login-link">Retour à la connexion</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}